# Application Configuration
NODE_ENV=development
APP_VERSION=1.0.0
PORT=3000
HOST=localhost
TZ=UTC
LOG_LEVEL=info

# Database Configuration
DB_PATH=./data/university.db
DB_LOGGING=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=3600
CHROMA_HOST=localhost
CHROMA_PORT=8000

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# RAG Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7
RAG_CONTEXT_WINDOW=4000

# Security Configuration
JWT_SECRET=your_very_secure_secret_here_change_in_production
JWT_EXPIRES_IN=24h
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# UI Configuration
UI_THEME=adaptive
UI_ANIMATIONS=true
UI_ANIMATION_DURATION=300

# Monitoring Configuration
METRICS_ENABLED=false
METRICS_PORT=9090
LOG_FORMAT=json
LOG_FILE=./logs/ecosystem.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m
HEALTH_CHECK_INTERVAL=30000

# External Integrations
WEARABLES_ENABLED=false
EMAIL_PROVIDER=smtp
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=

# Development
DEBUG=agentricai:*