{
  "name": "AgentricAI University",
  "short_name": "AgentricAI",
  "description": "Educational companion for neurodiverse learners and AAC device users",
  "version": "1.0.0",
  "start_url": "/student/index.html",
  "scope": "/",
  "display": "standalone",
  "orientation": "landscape",
  "theme_color": "#87CEEB",
  "background_color": "#87CEEB",
  
  "icons": [
    {
      "src": "assets/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/icons/icon-96x96.png", 
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/icons/icon-128x128.png",
      "sizes": "128x128", 
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png", 
      "purpose": "any"
    },
    {
      "src": "assets/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "assets/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  
  "categories": ["education", "accessibility", "communication", "kids"],
  "lang": "en",
  "dir": "ltr",
  
  "prefer_related_applications": false,
  
  "shortcuts": [
    {
      "name": "Student Learning",
      "short_name": "Learn",
      "description": "Access adaptive learning activities",
      "url": "/student/index.html#learn",
      "icons": [
        {
          "src": "assets/icons/shortcut-learn.png",
          "sizes": "192x192",
          "purpose": "any"
        }
      ]
    },
    {
      "name": "Communication Board",
      "short_name": "Communicate",
      "description": "Symbol-based communication tools",
      "url": "/student/index.html#communicate", 
      "icons": [
        {
          "src": "assets/icons/shortcut-communicate.png",
          "sizes": "192x192",
          "purpose": "any"
        }
      ]
    },
    {
      "name": "Visual Schedule",
      "short_name": "Schedule",
      "description": "Daily routine and visual schedule",
      "url": "/student/index.html#schedule",
      "icons": [
        {
          "src": "assets/icons/shortcut-schedule.png", 
          "sizes": "192x192",
          "purpose": "any"
        }
      ]
    }
  ],
  
  "screenshots": [
    {
      "src": "assets/screenshots/student-interface.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Student learning interface with large, touch-friendly buttons"
    },
    {
      "src": "assets/screenshots/communication-board.png", 
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Symbol-based communication board for AAC users"
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },

  "protocol_handlers": [
    {
      "protocol": "agentricai",
      "url": "/student/index.html?protocol=%s"
    }
  ],

  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.agentricai.university",
      "id": "com.agentricai.university"
    }
  ],

  "aac_optimizations": {
    "large_touch_targets": true,
    "high_contrast_mode": true,
    "symbol_communication": true,
    "voice_output": true,
    "offline_first": true,
    "sensory_friendly": true,
    "visual_schedules": true,
    "routine_support": true,
    "crisis_support": true
  },

  "accessibility_features": [
    "switch-control",
    "voice-control", 
    "screen-reader",
    "high-contrast",
    "large-text",
    "symbol-navigation",
    "simplified-ui",
    "calm-colors",
    "reduced-motion"
  ],

  "educational_standards": [
    "IEP-compatible",
    "IDEA-compliant", 
    "FERPA-compliant",
    "privacy-by-design",
    "neurodiverse-focused"
  ]
}